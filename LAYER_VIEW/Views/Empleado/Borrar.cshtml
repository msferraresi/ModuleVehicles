@model LAYER_ENTITY.Empleado

@{
    ViewBag.Title = "Borrar empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Borrar Empleado</h3>

<h3>¿Seguro que quiere borrar el empleado?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt hidden>
            @Html.DisplayNameFor(model => model.IdEmpleado)
        </dt>

        <dd hidden>
            @Html.DisplayFor(model => model.IdEmpleado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DNI)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DNI)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayName("Estado")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdEstado)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-1 col-md-4">
                    <input type="submit" value="Borrar" class="btn btn-danger btn-sm" />
                </div>
                <div class="col-md-pull-3 col-md-4">
                    @Html.ActionLink("Regresar", "Index", "Empleado", new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>
        </div>
    }
</div>
